{
    "name": "olegv/brick",
    "description": "Инструмент для создания строго типизированных UI-компонентов на PHP",
    "type": "library",
    "keywords": ["component", "ui", "template", "php", "brick", "компоненты"],
    "homepage": "https://github.com/OlegVashkevich/brick",
    "license": "MIT",
    "authors": [{
        "name": "Oleg Vashkevich",
        "email": "ugluk@tut.by"
    }],
    "require": {
        "php": ">=8.2",
        "psr/simple-cache": "^3.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.33",
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "OlegV\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "./vendor/bin/phpstan analyse --memory-limit 256M -c phpstan.neon"
    },
    "bin": ["bin/brick"]
}
